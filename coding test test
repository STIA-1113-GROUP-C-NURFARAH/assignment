		while (type != 1 && type != 2 && type != 3 && type != 4 && type != 5 && type != 6 && type != 7) {
			System.out.println();
			System.out.println("INVALID");
			System.out.println("Enter code: ");
			type = ls.nextInt(); 
			
			
		}
			
		switch(type) {
