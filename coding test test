			break;
		case 4:
			System.out.println("| DESIGN FOR " + t4 + " |");
			break;
		case 5:	
			System.out.println("| DESIGN FOR " + t5 + " |");
			break;
		case 6:
			System.out.println("| DESIGN FOR " + t6 + " |");
			break;
		case 7:
			System.out.println("| DESIGN FOR " + t7 + " |");
			break;
		default:
			System.out.println("Invalid code :(");
			
			
	
			
	{
