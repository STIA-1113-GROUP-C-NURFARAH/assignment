package assignment1;
import java.util.Scanner;
public class Question2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Scanner scanMe = new Scanner (System.in);
		
		System.out.println("Enter year interest rate:" ); //
	    double interest = scanMe.nextDouble(); 
	    
	    System.out.println("Enter number of years:" );
	    int years = scanMe.nextInt(); 
		
	    System.out.println("Enter loan amount: $" );
	    double loan = scanMe.nextInt(); 
	    
	    double monthly = loan* (interest / 100);
	    double total = (years*12) * (3.5 /100)* loan;
	    
	    System.out.println("The monthly payment is $" + monthly);
	    System.out.println("The total payment is $" + total);
	}

}
